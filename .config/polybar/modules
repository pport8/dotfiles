[module/date]
type = internal/date
interval = 1

date = 
date-alt = "  %a, %d %b"

time = " %T"
time-alt = ${self.time}

format-prefix = 
format-prefix-font = 2
format-prefix-foreground = ${color.foreground-alt}

label = %date% %time%



[module/mpd]
