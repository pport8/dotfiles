#
# wm independent hotkeys
#

# most used programs
super + {Return,e,z,x,space}
 {\
 $TERMINAL,\
 $TERMINAL -e $FMANAGER,\
 $BROWSER,\
 $BROWSER_PRIVATE, \
 rofi -show drun
 }

# make sxhkd reload its configuration files:
super + Escape
 pkill -USR1 -x sxhkd

# change background
super + alt + w
 feh --no-fehbg --bg-fill "$(find $HOME/.local/share/wallpapers/ -iname '*.jpg' -print0 | shuf -z -n1 | tr '\0' '\n')"


#
# topbar shortcuts
#

# mpd play, pause, prev and next
XF86Audio{Prev,Play,Next}
 mpc -q {prev,toggle,next}

# lower/raise volume
XF86Audio{LowerVolume,RaiseVolume}
 pactl set-sink-volume @DEFAULT_SINK@ {-2%,+2%}

# mute volume
XF86AudioMute
 pactl set-sink-mute @DEFAULT_SINK@ toggle

# mute microphone
shift + XF86AudioMute
 pactl set-source-mute @DEFAULT_SOURCE@ toggle

# increase brightness
XF86MonBrightness{Down,Up}
 xbacklight {-dec 5,-inc 5}

# Seach tool
XF86Search
 rofi -show drun

# Screenshot
super + Print
 mkdir -p ~/Pictures/Screenshots; \
 flameshot full --path ~/Pictures/Screenshots/

super + shift + Print
 mkdir -p ~/Pictures/Screenshots; \
 flameshot gui --path ~/Pictures/Screenshots/

# Bluetooth headset connect
F7
 echo -e "{connect,disconnect} CC:5C:A4:DA:E9:D3\n" | bluetoothctl

# Windows 10 VM
shift + F7
 VBoxManage startvm 'W11'


#
# dunst shortcuts
#

# close notification
ctrl + space
 dunstctl close

# close all notifications
ctrl + shift + space
 dunstctl close-all


#
# bspwm hotkeys
#

# because of "exec bspwm" in xinitrc, when bspwm is killed it reloads xorg
# restart/reload desktop
super + r
 source ~/.config/bspwm/bspwmrc
super + shift + r
 bspc quit

# close and kill
super + {_,shift + }q
 bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
 bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
 bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
 bspc node -s biggest


#
# node state
#


#
# toggle tiled/floating
#
super + d
 if [ -n "$(bspc query -N -n focused.floating)" ]; then \
     bspc node focused -t tiled; \
 else \
     bspc node focused -t floating; \
 fi

#
# toggle tiled/fullscreen
#
super + f
 if [ -n "$(bspc query -N -n focused.tiled)" ]; then \
     bspc node focused -t fullscreen; \
 else \
     bspc node focused -t tiled; \
 fi


#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
 bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
 bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
 bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
 bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
 bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
 bspc wm -h off; \
 bspc node {older,newer} -f; \
 bspc wm -h on

# focus or send to the given desktop
#bspc {desktop -f,node -d} '^{1-9,0}'
super + {_,shift + }{1-9,0}
 bspc {desktop -f,node -d} $(bspc query -D -d '{1-9,0}')


#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
 bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
 bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
 bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
 bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
 bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
 bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
 bspc node -v {-20 0,0 20,0 -20,20 0}

